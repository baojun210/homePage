		.boy
			position absolute
			top 220px
			left 50px
			width 70px
			height 70px
			line-height 70px
			border-radius 50%
			background rgba(120,120,120,.5)
			text-align center
			color black
			font-size 16px
			font-weight bold
			animation boy 17s infinite
.fixed
	display none
	position fixed
	right 4px
	bottom 50px
	transition all .2s linear
@keyframes name
	0%
		top 0px
		left 0px
	20%
		top 100px
		left 100px
	40%
		top 150px
		left 150px
	60%
		top 75px
		left 100px
	80%
		top 20px
		left 50px
	100%
		top 0px
		left 0px	
@keyframes year
	0%
		top 100px
		left 100px
	33%
		top 190px
		left 200px
	66%
		top 30px
		left 180px
	100%
		top 100px
		left 100px
@keyframes area
	0%
		top 170px
		left 200px
	33%
		top 70px
		left 20px
	66%
		top 150px
		left 100px
	100%
		top 170px
		left 200px
@keyframes boy
	0%
		top 220px
		left 50px
	33%
		top 150px
		left 100px
	66%
		top 30px
		left 130px
	100%
		top 220px
		left 50px